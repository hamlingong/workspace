<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    style="@style/activitys">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
        <EditText
	        android:id="@+id/edit_face"
	        android:inputType="text"
	        android:layout_width="220dp"
	    	android:layout_height="wrap_content"
	    	android:textColorHint="#66FF33"
	    	android:hint="@string/edit_tipc"/>
	    <Button
	        android:id="@+id/edit_add"
	        android:text="@string/edit_add"
	        android:layout_width="90dp"
	    	android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <EditText
	        android:id="@+id/edit_num"
	        android:inputType="text"
	        android:layout_width="220dp"
	    	android:layout_height="wrap_content"
	    	android:digits="0123456"
	    	android:hint="@string/edit_dig"/>
	    <Button
	        android:id="@+id/edit_check"
	        android:text="@string/comm_submit"
	        android:layout_width="90dp"
	    	android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <EditText
	        android:inputType="textEmailAddress"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	    	android:hint="@string/edit_eml"/>
	    <EditText
	        android:id="@+id/edit_disable"
	        android:inputType="text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:hint="@string/edit_disable"/>
    </LinearLayout>
    <EditText
        android:inputType="textMultiLine"
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:gravity="top"
        android:textSize="12dp"
        android:lines="10"
        android:maxLines="15"
        android:hint="@string/edit_mutil"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:addStatesFromChildren="true">
        <TextView
            android:text="@string/edit_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"/>
        <EditText
        	android:inputType="numberDecimal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
        	android:singleLine="true"/>
        <ImageButton
            android:src="@drawable/icob_edit4"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/comm_image"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <EditText
	        android:id="@+id/edit_blank"
	        android:inputType="text"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:maxLength="15"
	        android:hint="@string/edit_blank"/>
	    <EditText
	        android:id="@+id/edit_pwd"
	        android:inputType="textPassword"
	    	android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:maxLength="15"
	        android:hint="@string/edit_pwd"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <EditText
	        android:inputType="text"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:selectAllOnFocus="true"
	        android:hint="@string/edit_focus"/>
	    <EditText
		    android:id="@+id/edit_focused"
		    android:inputType="text"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:hint="@string/edit_focused"/>
    </LinearLayout>
</LinearLayout>