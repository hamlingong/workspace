<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/activitys">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <TextView
	        android:id="@+id/txt_call"
	        android:text="@string/txt_call"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:padding="5dp"/>
	    <TextView
	        android:id="@+id/txt_html"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:padding="5dp"/>
	    <TextView
	        android:id="@+id/txt_span"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:padding="5dp"/>
	    <TextView
	        android:text="@string/txt_baidu"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textSize="15dp"
	        android:textStyle="italic"
	        android:autoLink="all"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_blog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_baidu"/>
    <TextView
        android:id="@+id/txt_img"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:padding="5dp"/>
    <TextView
        android:text="@string/txt_run"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:padding="5dp"
    	android:background="#FFCCFF"
    	android:singleLine="true"
    	android:ellipsize="marquee"
    	android:marqueeRepeatLimit="marquee_forever"
    	android:focusable="true"
    	android:focusableInTouchMode="true"
    	android:textColor="#00FFFF"/>
    <TextView
        android:text="@string/txt_autotip"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <AutoCompleteTextView
	        android:id="@+id/txt_auto"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	        android:hint="@string/txt_auto"/>
	    <MultiAutoCompleteTextView
	        android:id="@+id/txt_mauto"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	        android:hint="@string/txt_mauto"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <TextView
	        android:text="@string/txt_split"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="5dp"
	        android:textSize="12dp"
	        android:textColor="#00FFFF"
	        android:maxLength="10"/>
	    <TextView
	        android:text="@string/txt_style"
	        android:layout_weight="1"
	        style="@style/txt_style"/>
    </LinearLayout>
    <TextView
        android:text="@string/txt_imgbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/icob_txt1"
        android:textColor="#191970"/>
    <ImageView
        android:src="@drawable/icob_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/comm_image"/>
    <TextSwitcher
	    android:id="@+id/txt_formatres"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"/>
    <Button
	    android:id="@+id/txt_format"
	    android:text="@string/txt_format"
	    android:layout_width="150dp"
        android:layout_height="wrap_content"/>
    <ZoomControls
        android:id="@+id/txt_zoom"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_zoomres"
        android:text="@string/txt_zoomres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#00FFFF"/>
</LinearLayout>
</ScrollView>